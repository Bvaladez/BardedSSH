<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        >

        <TextView
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Status: "
            />

        <TextView
            android:id="@+id/status_text"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="200dp"
        android:orientation="vertical"
        >


        <ProgressBar
            android:id="@+id/conn_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:indeterminate="true"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        >

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:textColor="#ffffff"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="Hostname:"
            />

        <EditText
            android:id="@+id/host_editText"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:breakStrategy="simple"
            android:background="@null"
            android:text=""
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        >

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:textColor="#ffffff"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="Username:"
            />

        <EditText
            android:id="@+id/user_editText"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:text=""
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        >

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:textColor="#ffffff"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="Password:"
            />

        <EditText
            android:id="@+id/password_editText"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:background="@null"
            android:text=""
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        >

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:textColor="#ffffff"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="Port:"
            />

        <EditText
            android:id="@+id/port_editText"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:background="@null"
            android:text=""
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:gravity="center"
        android:orientation="vertical"
        >


        <Button
            android:id="@+id/sshConnect_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:text="Connect"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:gravity="center"
        android:orientation="vertical"
        >


        <Button
            android:id="@+id/save_machine_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:text="Save Settings"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/machines_listView"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#fff"
        android:dividerHeight="1px"
        />

</LinearLayout>